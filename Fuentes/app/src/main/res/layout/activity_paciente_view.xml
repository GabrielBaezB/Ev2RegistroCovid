<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PacienteViewActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- RutPaciente-->
        <TextView
            android:text="RUT Del Paciente"
            android:layout_marginTop="@dimen/marginTopTitulos"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rut_paciente_view"
            android:textSize="@dimen/viewTextIngresados"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--Nombre Completo del paciente -->
        <TextView
            android:text="Nombre del Paciente"
            android:layout_marginTop="@dimen/marginTopTitulos"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/nombre_paciente_view"
          android:textSize="@dimen/viewTextIngresados"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <!-- Fecha de Ingreso-->
        <TextView
            android:text="Fecha de Examen"
            android:layout_marginTop="@dimen/marginTopTitulos"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/viewTextIngresados"
            android:id="@+id/fecha_paciente_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Area de Trabajo-->
        <TextView
            android:text="Area de trabajo del Paciente"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_marginTop="@dimen/marginTopTitulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/viewTextIngresados"
            android:id="@+id/area_paciente_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <!--Sintomas-->
    <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <TextView
            android:text="Presenta Sintomas?"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/sintoma_paciente_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/viewTextIngresados" />
        </LinearLayout>
        <!--Presenta Tos-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Presenta Tos?"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tos_paciente_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/viewTextIngresados" />
    </LinearLayout>

        <!--Temperatura-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Temperatura"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/temperatura_paciente_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/viewTextIngresados" />
    </LinearLayout>

        <!--Presion arterial-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Presion Arterial"
            android:textSize="@dimen/viewTextIngresados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/presion_paciente_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/viewTextIngresados" />
    </LinearLayout>


</LinearLayout>